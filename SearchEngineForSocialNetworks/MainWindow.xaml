<Window x:Class="SearchEngineForSocialNetworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchEngineForSocialNetworks"
        mc:Ignorable="d"
        Title="Search Engine For Social Networks" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="EmailAddress" HorizontalAlignment="Left" Height="23" Margin="10,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="484"/>
        <Label x:Name="Label" Content="Please, enter email address" HorizontalAlignment="Left" Margin="10,23,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Search" Content="Search" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" Width="154" Height="31" Click="Search_Click"/>
    </Grid>
</Window>
