<Window x:Class="SearchEngineForSocialNetworks.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SearchEngineForSocialNetworks"
        mc:Ignorable="d"
        Title="Search Engine For Social Networks" Height="350" Width="500">
    <Grid>
        <Button x:Name="Search" Content="Search" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="154" Height="31" Click="Search_Click"/>
        <DataGrid AutoGenerateColumns="False" Name="MainDataGrid" CanUserAddRows="True" ItemsSource="{Binding InstagramUserBinding}" Margin="0,50,0,0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="IsFound" IsReadOnly="True" Binding="{Binding Path=IsFound}" Width="75"></DataGridTextColumn>
                <DataGridTextColumn Header="EmailAddress" IsReadOnly="True" Binding="{Binding Path=EmailAddress}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="Name" IsReadOnly="True" Binding="{Binding Path=Name}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="Uri" IsReadOnly="True"  Binding="{Binding Path=Uri}" Width="150"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
